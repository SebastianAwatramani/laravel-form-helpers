    "keywords": ["laravel", "form", "html", "eloquent", "input", "validation", "session", "helpers"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sahib J. Leo",
            "email": "sahib@sahib.io"
        }
    ],
    "require": {
        "php": ">=5.5.9"
    },
    "autoload": {
        "psr-4": {
            "Sahib\\Form\\": "src/"
        }
